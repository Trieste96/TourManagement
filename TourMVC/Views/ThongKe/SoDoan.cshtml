
@{
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>@ViewBag.Title</h2>
<script>
    $(".selector").datepicker({
        dateFormat: "dd-mm-yyyy"
    });
</script>
@using (Html.BeginForm("SoDoan", "ThongKe", FormMethod.Post))
{
    <div class="form-horizontal">
        <hr />
        <div class="form-group">
            <label class="control-label col-md-2">TuNgayGio</label>
            <div class="col-md-10">
                @Html.TextBox("TuNgayGio", null, new { @class = "form-control datepicker", @type = "date" })
            </div>
        </div>
        <div class="form-group">
            <label class="control-label col-md-2">DenNgayGio</label>
            <div class="col-md-10">
                @Html.TextBox("DenNgayGio", null, new { @class = "form-control datepicker", @type = "date" })
            </div>
        </div>
        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Xem" class="btn btn-default" />
            </div>
        </div>
    </div>

}
@{ 
    if(ViewBag.TuNgay != null)
    {

        string tuNgay = ViewBag.TuNgay.ToString();
        string denNgay = ViewBag.DenNgay.ToString();
        @:Ngày đã chọn<br />
        
        @tuNgay<br />
        @denNgay

        foreach(TourModel.LoaiChiPhi loai in ViewBag.LoaiCP as ICollection<TourModel.LoaiChiPhi>)
        {
            @:loai.TenLoaiCP<br />
        }
    }
}